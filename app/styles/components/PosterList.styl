.poster-item
	display flex
	align-items center
	font-size 20px
	margin-bottom 20px

.poster-item-info
	&__part
		&--left
			margin-left 15px
			margin-right 20px
		&--right
			margin-right 10px

	&__photo
			size(128px)
			background-size cover
			background-position center
			border-radius 50%
			box-shadow 2px 5px 20px rgba(40, 20, 155, .8)

.poster-item-info__text
	border none
	background-color transparent
